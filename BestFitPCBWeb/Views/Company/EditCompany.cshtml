@model BestFitBusinessLayer.company

@{
    ViewBag.Title = "EditCompany";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="main" role="main">
    <div id="content">
        <div class="grid_4">
            <div class="box">
		        <h2>
			        <a href="#" id="toggle-forms">Company Details</a>
		        </h2>
		        <div class="block" id="forms">

                    @if (ViewBag.success != null) {
                        if (true == (Boolean)ViewBag.success)
                        {
                            <h4 class="alert_success" >@ViewBag.Message</h4>
                        }
                        else
                        {
                            <h4 class="alert_error" >@ViewBag.Message</h4>
                        }
                    }
                    @using (Html.BeginForm()) {
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <legend>Edit Company Details</legend>

                            @Html.HiddenFor(Model => Model.companyId)

                            <div class="sixteen_column section">
							    <div class="eight column">
								    <div class="column_content">
                                        <label for="companyName">Company Name</label>
                                        @Html.EditorFor(Model => Model.companyName)
                                        @Html.ValidationMessageFor(Model => Model.companyName)
                                    </div>
                                </div>
                                <div class="eight column">
								    <div class="column_content">
                                        <label for="companyPhone">Phone</label>
                                        @Html.EditorFor(Model => Model.companyPhone)
                                        @Html.ValidationMessageFor(Model => Model.companyPhone)
                                    </div>
                                </div>
                            </div>
                            <div class="sixteen_column section">
							    <div class="eight column">
								    <div class="column_content">
                                        <label for="companyEmail">Email</label>
                                        @Html.EditorFor(Model => Model.companyEmail)
                                        @Html.ValidationMessageFor(Model => Model.companyEmail)
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="sixteen_column section">
						    <div class="ten column">
							    <div class="column_content">
                                    <div>
                                        @Html.ActionLink("Back to List", "CompanyList")
                                    </div>
							    </div>
						    </div>
						    <div class="six column">
							    <div class="column_content">
							        <input type="submit" value="Save" class="alt_btn" />
							    </div>
						    </div>
					    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
}
