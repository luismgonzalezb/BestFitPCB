@model BestFitPCBWeb.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id="login" }))
{
    
    <fieldset class="boxBody">
        <legend></legend>
        <h1>Log in to BestFit PCB (Building quick layouts)</h1>
        <p class="register">Not a member? @Html.ActionLink("Register Here!", "Register")</p>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="control-group">
    	    <label for="Email">Email</label>
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email", @class = "field required" })
        </div>
        <div class="control-group">
            <label for="Password">Password</label>
            @Html.PasswordFor(m => m.Password,new { placeholder = "Password", @class = "field required" })
        </div>
        <p class="forgot">@Html.ActionLink("Forgot your password?","Forgot")</p>
        <div class="submit">
            <button type="submit">Log in</button>
            <label>
        	    <input type="checkbox" name="RememberMe" id="RememberMe" value="true" checked="checked" />
                Remember my login on this computer
            </label>
        </div>
    </fieldset>
    <p class="back">@Html.ActionLink("Go back to our home page", "Index", "Home")</p>
}

@section Scripts {
    @Scripts.Render("~/Scripts/Account/login.js")
}
