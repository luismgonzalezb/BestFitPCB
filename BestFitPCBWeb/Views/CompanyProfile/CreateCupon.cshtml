@model BestFitBusinessLayer.Models.cupon

@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)

	<h4 class="alert_error" id="error-msg-det" style="visibility:hidden">Error Message</h4>
	
	<fieldset>
		<legend>panelSize</legend>
		<div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
					<label for="cuponName">Name</label>
					@Html.TextBoxFor(model => model.cuponName, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.cuponName)
				</div>
			</div>
			<div class="seven column">
				<div class="column_content">
					@Html.LabelFor(model => model.width)
					@Html.TextBoxFor(model => model.width, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.width)
				</div>
			</div>
		</div>
		<div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
					@Html.LabelFor(model => model.height)
					@Html.TextBoxFor(model => model.height, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.height)
				</div>
			</div>
			<div class="seven column">
				<div class="column_content">
					@Html.LabelFor(model => model.spacing)
					@Html.TextBoxFor(model => model.spacing, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.spacing)
				</div>
			</div>
		</div>
		<div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
					<label for="color">Color</label>
					<div id="colorSelector"><div style="background-color: #@Model.color;"></div></div>
					@Html.HiddenFor(model => model.color)
				</div>
			</div>
			<div class="seven column">
				<div class="column_content">
					&nbsp;
				</div>
			</div>
		</div>
		@Html.HiddenFor(model => model.profileId)
	</fieldset>
	<div class="sixteen_column section">
		<div class="seven column">
			<div class="column_content">
				<input type="button" value="Cancel" class="alt_btn" onclick="closePopup()" />
			</div>
		</div>
		<div class="seven column">
			<div class="column_content">
				<input type="button" value="Save" class="alt_btn" onclick="submitDetailsForm(this.form)" />
			</div>
		</div>
	</div>
}

@Scripts.Render("~/Scripts/Admin/colorpickerimplement.js")