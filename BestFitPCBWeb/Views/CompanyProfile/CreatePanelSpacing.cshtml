@model BestFitBusinessLayer.panelSpacing

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <h4 class="alert_error" id="error-msg-det" style="visibility:hidden">Error Message</h4>
    
    <fieldset>
        <legend>panelSize</legend>
        <div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
                    <label for="panelSpacingName">Name</label>
                    @Html.TextBoxFor(model => model.panelSpacingName, new { style="width:70px;" })
                    @Html.ValidationMessageFor(model => model.panelSpacingName)
                </div>
            </div>
            <div class="seven column">
				<div class="column_content">
                    @Html.LabelFor(model => model.min)
                    @Html.TextBoxFor(model => model.min, new { style="width:70px;" })
                    @Html.ValidationMessageFor(model => model.min)
                </div>
            </div>
        </div>
        <div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
                    @Html.LabelFor(model => model.max)
                    @Html.TextBoxFor(model => model.max, new { style="width:70px;" })
                    @Html.ValidationMessageFor(model => model.max)
                </div>
            </div>
            <div class="seven column">
				<div class="column_content">
                    @Html.LabelFor(model => model.std)
                    @Html.TextBoxFor(model => model.std, new { style="width:70px;" })
                    @Html.ValidationMessageFor(model => model.std)
                </div>
            </div>
        </div>
        @Html.HiddenFor(model => model.profileId)
    </fieldset>
    <div class="sixteen_column section">
		<div class="seven column">
			<div class="column_content">
                <input type="button" value="Cancel" class="alt_btn" onclick="closePopup()" />
			</div>
		</div>
		<div class="seven column">
			<div class="column_content">
				<input type="button" value="Save" class="alt_btn" onclick="submitDetailsForm(this.form)" />
			</div>
		</div>
	</div>
}