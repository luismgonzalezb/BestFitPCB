@model BestFitBusinessLayer.Models.panelTooling

@using (Html.BeginForm()) {
	@Html.ValidationSummary(true)

	<h4 class="alert_error" id="error-msg-det" style="visibility:hidden">Error Message</h4>
	
	<fieldset>
		<legend>panelSize</legend>
		<div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
					@Html.LabelFor(model => model.x)
					@Html.TextBoxFor(model => model.x, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.x)
				</div>
			</div>
			<div class="seven column">
				<div class="column_content">
					@Html.LabelFor(model => model.y)
					@Html.TextBoxFor(model => model.y, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.y)
				</div>
			</div>
		</div>
		<div class="sixteen_column section">
			<div class="seven column">
				<div class="column_content">
					@Html.LabelFor(model => model.r)
					@Html.TextBoxFor(model => model.r, new { style="width:70px;" })
					@Html.ValidationMessageFor(model => model.r)
				</div>
			</div>
		</div>
		@Html.HiddenFor(model => model.profileId)
	</fieldset>
	<div class="sixteen_column section">
		<div class="seven column">
			<div class="column_content">
				<input type="button" value="Cancel" class="alt_btn" onclick="closePopup()" />
			</div>
		</div>
		<div class="seven column">
			<div class="column_content">
				<input type="button" value="Save" class="alt_btn" onclick="submitDetailsForm(this.form)" />
			</div>
		</div>
	</div>
}